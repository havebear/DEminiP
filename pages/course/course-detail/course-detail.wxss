/* pages/course/course-detail/course-detail.wxss */

page {
  padding-bottom: 130rpx;
}

.cd-head {
  position: relative;
  width: 100%;
  height: 240rpx;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0));
  font-size: 36rpx;
  color: #fff;
  overflow: hidden;
}

.cd-head-bg {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 240rpx;
  top: 0;
  left: 0;
  /* filter: blur(6rpx); */
}

.cd-info {
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #999;
}

.cd-info-description {
  padding: 30rpx 0;
  /* text-indent: 2em; */
  color: #333;
}

.cd-info-other {
  padding: 30rpx 0;
  font-size: 24rpx;
  border-top: 2rpx dashed #e4e4e4;
}

.cd-info-other text {
  margin-right: 20rpx;
}

.cd-teacher-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cd-teacher-info .iconfont {
  color: #999;
}

.cd-teacher-info-cover {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.cd-teacher-info > view {
  width: 0;
  flex: 1;
}

.cd-teacher-name {
  font-size: 28rpx;
  color: #333;
}

.cd-teacher-tag {
  font-size: 24rpx;
  color: #999;
}

.cd-teacher-note {
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
}
