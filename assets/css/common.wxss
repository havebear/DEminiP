/* 详情item */

.detail-item {
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
}

.detail-item-title {
  padding: 30rpx 0;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-item-title .pickup {
  display: inline-block;
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #999;
}

.detail-info {
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
}

.detail-info-cover {
  height: 240rpx;
  margin: 0 -30rpx;
  /* padding-top: 30rpx; */
}

.detail-info-cover image {
  width: 100%;
  height: 240rpx;
}

.detail-info-title {
  padding-top: 30rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.detail-info-description {
  padding: 20rpx 0 30rpx 0;
  color: #666;
  /* text-indent: 2em; */
}

.detail-info-other {
  padding: 30rpx 0;
  font-size: 24rpx;
  color: #999;
  border-top: 2rpx solid #f3f3f3;
}

.detail-info-other text {
  margin-right: 20rpx;
}

/*详情教师信息  */
.detail-teacher-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.detail-teacher-info .iconfont {
  color: #999;
}

.detail-teacher-info-cover {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.detail-teacher-info > view {
  width: 0;
  flex: 1;
}

.detail-teacher-name {
  font-size: 28rpx;
  color: #333;
}

.detail-teacher-tag {
  font-size: 24rpx;
  color: #999;
}

.detail-teacher-note {
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
}

/*目录  */

.directorys {
  padding-bottom: 20rpx;
}

.directory {
  margin-right: -20rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f4f5f6;
  font-size: 28rpx;
  color: #666;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.directory .iconfont {
  color: #999;
}

/*底部按钮  */

.b-btn {
  position: fixed;
  z-index: 2;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  bottom: 0;
  left: 0;
  background-color: #fff;
}

.b-btn button {
  background-color: #2878ff;
}

.b-btn .active {
  background-color: #6aa1ff;
}

/*评论  */

.reviews {
}

.review {
  padding: 30rpx 0;
  display: flex;
  font-size: 28rpx;
  color: #333;
  border-top: 2rpx solid #f3f3f3;
}

.review > view {
  width: 0;
  flex: 1;
}

.review-head {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
}

.review-avatar {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.review-info {
  width: 0;
  flex: 1;
}

.review-info-time {
  font-size: 24rpx;
  color: #999;
}

.review-action {
}

.review-action.avtive {
  color: #d81e06;
}

.review-content {
  padding-top: 10rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}

/*查看更多  */

.load-more {
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
}

.load-more-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #f3f3f3;
  font-size: 28rpx;
  padding: 16rpx 30rpx;
  color: #666;
  border-radius: 8rpx;
}

/*列表项  */

items {
}

.item {
  border-bottom: 2rpx solid #f3f3f3;
  padding: 20rpx 0;
  display: flex;
}

.item:last-child {
  border: none;
}

.item-cover, .item-cover image {
  width: 200rpx;
  height: 140rpx;
}

.item-cover {
  margin-right: 20rpx;
}

.item-content {
  flex: 1;
  width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-content-title {
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.item-content-subtitle {
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-content-info {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

