/* 详情item */

.detail-item {
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
}

.detail-item-title {
  padding: 30rpx 0;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-item-title .pickup {
  display: inline-block;
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #999;
}

/*目录  */

.directorys {
  padding-bottom: 20rpx;
}

.directory {
  margin-right: -20rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f4f5f6;
  font-size: 28rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.directory .iconfont {
  color: #999;
}

/*底部按钮  */

.b-btn {
  position: fixed;
  z-index: 2;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  bottom: 0;
  left: 0;
  background-color: #fff;
}

.b-btn button {
  background-color: #2878ff;
}

.b-btn .active {
  background-color: #6aa1ff;
}

/*评论  */

.appraisals {
}

.appraisal {
  padding: 30rpx 0;
  display: flex;
  border-top: 2rpx dashed #e4e4e4;
}

.appraisal > view {
  width: 0;
  flex: 1;
}

.appraisal-head {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
}

.appraisal-avatar {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.appraisal-info {
  width: 0;
  flex: 1;
}

.appraisal-info-time {
  font-size: 24rpx;
  color: #999;
}

.appraisal-action {
}

.appraisal-action.avtive {
  color: #d81e06;
}

.appraisal-content {
  padding-top: 10rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}
