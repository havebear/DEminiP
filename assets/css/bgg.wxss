/*分类列表  */

.bgg-classify {
  width: 100%;
  height: 100%;
  display: flex;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 1rpx solid #f3f3f3;
}

.bgg-classify scroll-view {
  width: 100%;
  box-sizing: border-box;
}

.bgg-classify>view {
  height: 100%;
  box-sizing: border-box;
}

.bgg-classify-list {
  border-right: 1rpx solid #f3f3f3;
  display: flex;
  flex-direction: column;
}

.bgg-classify-list scroll-view {
  flex: 1;
  height: 0;
}

.bgg-classify-item {
  position: relative;
  width: 160rpx;
  padding: 0 10rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
}

.bgg-classify-item.active {
  font-size: 32rpx;
  color: #3839d9;
  background-color: #f0f0f0;
}

.bgg-classify-item.active:after {
  position: absolute;
  content: '';
  width: 4rpx;
  height: 1em;
  margin-top: -0.5em;
  left: 0;
  top: 50%;
  background-color: #3839d9;
}

.bgg-classify-content {
  flex: 1;
  width: 0;
  flex-basis: 0;
  display: flex;
  flex-direction: column;
}

.bgg-classify-content scroll-view {
  flex: 1;
  height: 0;
}

.bgg-classify-filter {
  height: 88rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  line-height: 1em;
  border-bottom: 1rpx solid #f3f3f3;
}

.bgg-classify-filter>view {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bgg-classify-filter>view>text {
  display: inline-block;
  min-width: 2em;
  padding: 15rpx 0;
}

.bgg-classify-filter>view>view {
  /* flex: 1;
  width: 0; */
  padding: 15rpx 0;
}
